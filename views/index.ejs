
<!-- include _header -->
  <%- include('include/_header')%>
<!-- /include _header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <a href="/add-question" class="border-shadow">
        <span class="text-gradient">New Question <i class="fa fa-question" aria-hidden="true"></i></span>
      </a>
    </div>
    <!-- Form Handling -->
    <form action="/" method="POST">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>Question</th>
            <th>Answer</th>
            <th>Topic</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <%- include('include/_show')%>
        </tbody>
      </table>
    </form>
    
    <!-- /Form Handling -->
  </div>
</main>
<!-- /Main Site -->

<!-- include _footer -->
  <%- include('include/_footer')%>
<!-- /include _footer -->
